.container
  .pure-g-r
    .pure-u-1-3
    .pure-u-1-3.pull-center
      p#about
      form#sign-in-form(action="/register", method="post").pure-form.pure-form-aligned
        legend
          span Register
          a.btn.alt-btn(onclick="toggleSignIn();") Sign In
        fieldset
          .pure-control-group
            label(for="username") Name
            input(type="text", name="username", placeholder="username", autofocus="autofocus")
          .pure-control-group
            label(for="password") Password
            input.password-field(type="password", name="password", placeholder="Password")
            a.password-toggle(onclick="togglePasswordFields(this);", title="Toggle viewable password")
              i.icon-eye-open
          #password-confirm.pure-control-group
            label(for="password") Confirm Password
            input.password-field(type="password", name="password_conf", placeholder="Confirm password")
          .pure-controls
            input(type="submit", value="Submit")
script
  function toggleSignIn(){
    var form = document.getElementById('sign-in-form');
    if(form.action == window.location.href+'register'){
      document.getElementById('password-confirm').innerHTML = null;
      form.action = '/sign-in';
      form.children[0].children[0].innerText = 'Sign In';
      document.getElementsByClassName('alt-btn')[0].innerHTML = 'Register';
    }else{
      document.getElementById('password-confirm').innerHTML = '<div class="pure-control-group"><label for="password">Confirm Password</label><input type="password" name="password_conf" placeholder="Confirm password" class="password-field"></div>';
      form.action = '/register';
      form.children[0].children[0].innerText = 'Register';
      document.getElementsByClassName('alt-btn')[0].innerHTML = 'Sign In';
    }
  };