extends layout

block content
  include generalHeader

  #main.pure-g-r
    .pure-u-1-3
    .pure-u-1-3.pull-center
      p#about
      form(action="/register", method="post").pure-form.pure-form-aligned
        legend Register for free!
          a.btn.alt-btn(href="/sign-in") Sign In
        fieldset
          .pure-control-group
            label(for="email") Email
            input(type="email", name="email", placeholder="you@domain.co", autofocus="autofocus")
          .pure-control-group
            label(for="password") Password
            input.password-field(type="password", name="password", placeholder="Password")
            a.password-toggle(onclick="togglePasswordFields(this);")
              i.icon-eye-open
          .pure-control-group
            label(for="password") Confirm Password
            input.password-field(type="password", name="password_conf", placeholder="Confirm password")
          .pure-controls
            input(type="submit", value="Register")
    .pure-u-1-3
    include links