extends layout

block content
    if !user
        .pure-g-r
            .pure-u-1-2
              #menu-bar.pure-menu.pure-menu-open.pure-menu-horizontal(style="margin-top:-2em;")
                ul.otherly
                    li
                      a.brand-nav(href="/") <span class="memory rf-atomist">tomist</span>
                    li
                      a.account-nav(href="/account")
                        i.icon-cog
                    li
                      a.sign-out-nav(href="/sign-out")
                        i.icon-signout
    .pure-g-r
      .pure-u-1-6.wide-only
      .pure-u-1-3.wide-half
        form(action="/contact", method="post").pure-form.pure-form-aligned
            legend.pure-input-2-3 Contact
            fieldset.pure-group
                if user
                    input.pure-input-2-3(type="email", name="sender", placeholder="Your email", value="#{ user.email }")
                if (!user)
                    input.pure-input-2-3(type="text", name="sender", placeholder="Your email")
                textarea.pure-input-2-3(rows="10", name="words", placeholder="Your words go here...")
            .pure-controls
                input(type="submit", value="Seal it and send it")
      .pure-u-1-3.pull-center.wide-half
        br
        br
        p We are here to provide you with the best support possible. Please send all comments, inquiries and feedback through our contact form.
        p We'll respond promptly!
        
      .pure-u-1-6.wide-only
      .pure-u-1
        br
        br
        br
        br
        br
        br
      include links
    if !user
        script
          (function makeDemo(){
            var signUp = document.getElementsByClassName('account-nav')[0],
                signOut = document.getElementsByClassName('sign-out-nav')[0];
            signOut.style.display = 'none';
            signUp.href='/register';
            signUp.innerHTML = '<i class="icon-plus"></i> Sign up for free!';
          })();