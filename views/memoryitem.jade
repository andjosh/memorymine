if memory.link
  li
    a(href="#{memory.link}", target="_blank") #{memory.text}
    .memory-time
      small
        if memory.tweetId
          a(href="http://twitter.com/statuses/#{memory.tweetId}", target="_blank")
            i.icon-twitter.icon-large
        else
          a(href="/memory/#{memory._id}") #{memory.modified}
else
  li #{memory.text}
